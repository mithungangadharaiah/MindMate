  "screenshots": [
    {
      "src": "/screenshots/home-narrow.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "MindMate home screen"
    },
    {
      "src": "/screenshots/voice-session-narrow.png", 
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Voice check-in session"
    }
  ],
  "shortcuts": [
    {
      "name": "Voice Check-in",
      "short_name": "Check-in", 
      "description": "Start a quick voice emotional check-in with Hrudhi",
      "url": "/voice",
      "icons": [
        {
          "src": "/icons/shortcut-voice.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Find Friends",
      "short_name": "Friends",
      "description": "Discover mindful friends in your area",
      "url": "/friends", 
      "icons": [
        {
          "src": "/icons/shortcut-friends.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mood Places",
      "short_name": "Places",
      "description": "Find places that match your current mood",
      "url": "/places",
      "icons": [
        {
          "src": "/icons/shortcut-places.png", 
          "sizes": "96x96"
        }
      ]
    }
  ],
  "capture_links": "new-client",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+mindmate",
      "url": "/handle?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/*"]
        }
      ]
    }
  }
}