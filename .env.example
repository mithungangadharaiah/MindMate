# Environment Configuration for MindMate

# Application Settings
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database (Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/mindmate
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Audio Storage (S3-compatible)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=mindmate-audio

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# AI Services Configuration
USE_CLOUD_ASR=false
USE_CLOUD_EMOTION=false

# Option A: Self-hosted models
WHISPER_MODEL_PATH=./models/whisper-base.bin
EMOTION_MODEL_PATH=./models/emotion-classifier.onnx

# Option B: Cloud APIs
OPENAI_API_KEY=sk-your-openai-key
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus
GOOGLE_CLOUD_API_KEY=your-google-api-key

# Location Services
GOOGLE_PLACES_API_KEY=your-google-places-api-key
ENABLE_LOCATION_SERVICES=true

# Privacy & Security
ENABLE_ANALYTICS=false
DATA_RETENTION_DAYS=90
ENCRYPT_AUDIO_AT_REST=true

# Development/Debug
DEBUG_EMOTION_ANALYSIS=true
MOCK_FRIEND_MATCHING=true
MOCK_PLACES_DATA=true
LOG_LEVEL=info

# PWA Configuration
ENABLE_PUSH_NOTIFICATIONS=false
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key